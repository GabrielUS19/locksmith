{
  "compilerOptions": {
    "target": "es2024",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "typeRoots": ["./node_modules/@types", "./src/@types"],

    "rootDir": "./src",
    "outDir": "./build"
  },
  "include": ["src/**/*"]
}
